{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./static/",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2017",
    "lib": [ "dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "rootDirs": [
      "src/"
    ],
    "experimentalDecorators": true,
    "paths": {
      "@models/*": [
        "models/*"
      ],
      "@modals/*": [
        "modals/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  }
}
